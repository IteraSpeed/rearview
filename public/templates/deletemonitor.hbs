<!-- Delete Monitor Modal -->
<div id='deleteMonitor' class='delete-monitor modal hide fade'>
    <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>close</button>
        <h1 id='deleteMonitorLabel'>Delete Monitor</h1>
    </div>
    <div class='modal-body'>
        <div class='hero-unit'>
            <p>Are you sure you want to delete this monitor?</p>
        </div>
    </div>
    <div class='modal-footer'>
        <button class="delete btn btn-large btn-primary"><i class="icon-ok icon-white"></i></button>
        <button class="cancel btn btn-large"><i class="icon-remove icon-white"></i></button>
    </div>
</div>